<form id="headerForm" class="headerForm">
  {{#if login}}
    <a class="input" href="/saved-fashion">Saved <i class="fa fa-heart" aria-hidden="true"></i></a>
    <a class="input" href="/logout">Logout <i class="fa fa-sign-out" aria-hidden="true"></i></a>
  {{else}}
    <a class="input" href="/login">Login</a>
    <a class="input" href="/signup">Sign Up</a>
  {{/if}}

</form>
<div id="navbar" class="navbar">
  <div class="containernav">

    {{>nav}}
    <p></p>
  </div>
</div>
<div class="Container">
  <div class="topContainer">

    <div class="bigphoto style">
      <img src="/image/{{bigimg.gender}}/{{bigimg.img}}" alt="">
    </div>
    <div class="photos">
      {{#each details}}

        <div class="rightContainer">
          <div class="style">
            <img src="/image/details/{{gender}}/{{cloth_id}}/{{detailimg}}" alt="">
          </div>
          <div class="info">
            <h4 class="price">{{price}} <span style="color:#752223">NIS</span></h4>
            <h4 class="shopname">{{shop_name}} <span style="color:#752223">SHOP</span></h4>
          </div>
        </div>
      {{/each}}
    </div>

  </div>
