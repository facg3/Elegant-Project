<header class="header">
  <form id="headerForm" class="headerForm">
    {{#if login}}
      <a class="input1" href="/saved-fashion">Saved <i class="fa fa-heart" aria-hidden="true"></i></a>
      <a class="input1" href="/logout">Logout <i class="fa fa-sign-out" aria-hidden="true"></i></a>
    {{else}}
      <a class="input1" href="/login">Login</a>
      <a class="input1" href="/signup">Sign Up</a>
    {{/if}}

  </form>
</header>
<div id="navbar" class="navbar">
  <div class="containernav">
    {{>nav}}
    <p></p>
  </div>
</div>
<div class="cont">
  <div class="container" id="container">
    <h1 class="h1">Contact Us</h1>
    <form class="contact" action="#" method="post">
      <div class="information">
        <input type="text" name="name" value="" class="input" placeholder="Your name">
        <input type="email" name="email" value="" class="input" placeholder="Your email">
      </div>
      <input type="text" value="" class="comment" name="comment" placeholder="Your message">
      <button type="submit" name="button" id="btn">Send</button>
    </form>
  </div>
</div>
<link rel="stylesheet" href="css/contactus.css">
