<header class="header">
  <form id="headerForm" class="headerForm">
    {{#if login}}
      <a class="input1" href="/saved-fashion">Saved <i class="fa fa-heart" aria-hidden="true"></i></a>
      <a class="input1" href="/logout">Logout <i class="fa fa-sign-out" aria-hidden="true"></i></a>
    {{else}}
    <a class="input1" href="/Login">Login <i class="fa fa-sign-in" aria-hidden="true"></i></a>
    <a class="input1" href="/Signup">Sign Up <i class="fa signup">&#xf25d;</i></a>
    {{/if}}

  </form>
</header>
<div id="navbar" class="navbar">
  <div class="containernav">
    {{>nav}}
    <p></p>
  </div>
</div>
<div class="cont">
  <div class="container" id="container">
    <h1 class="h1">Contact Us</h1>
    <form id="form" class="contact" method="post">
      <div class="information">
        <input id="name" type="text" name="name"  class="input" placeholder="Your name">
        <input id="email" type="email" name="email"  class="input" placeholder="Your email">
      </div>
      <input id="message" type="text" class="comment" name="comment" placeholder="Your message">
      <button type="submit" name="button" id="btn">Send</button>
    </form>
  </div>
</div>
<link rel="stylesheet" href="css/contactus.css">
<script src="js/contactusDom.js" charset="utf-8"></script>
