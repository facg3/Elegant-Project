<header class="header">
  <form id="headerForm" class="headerForm">
    {{#if login}}
      <a class="input" href="/saved-fashion">Saved <i class="fa fa-heart" aria-hidden="true"></i></a>
      <a class="input" href="/logout">Logout <i class="fa fa-sign-out" aria-hidden="true"></i></a>
    {{else}}
    <a class="input" href="/Login">Login <i class="fa fa-sign-in" aria-hidden="true"></i></a>
    <a class="input" href="/Signup">Sign Up <i class="fa signup">&#xf25d;</i></a> >
    {{/if}}

  </form>
</header>
<div id="navbar" class="navbar">
  <div class="containernav">
    {{>nav}}
    <p></p>
  </div>
</div>

<div class="bigContainer">
  {{#each blog}}
    <div class="rowContainer" id="nth{{mod}}">
      <a href="/blogs/article/{{id}}">
        <img src="./image/blogImgs/{{img}}" alt="img blog {{id}} ">
      </a>
      <div class="smallContainer">
        <a href="/blogs/article/{{id}}">
          <h2>{{title}}</h2>
        </a>
        <div class="likes">
          {{likes}} like
        </div>
        <p>
          {{article}}
          <a href="/blogs/article/{{id}}" class="readMore">Read More ...</a>
        </p>
      </div>
    </div>
  {{/each}}
</div>
<script src="js/functions.js" charset="utf-8"></script>
