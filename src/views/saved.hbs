<header class="header">
  <form id="headerForm" class="headerForm" action="" method="post">
    {{#if login}}
    <a class="input" href="/logout">Logout</a>
    {{else}}
    <a class="input" href="/login">Login</a>
    <a class="input" href="/signup">Sign Up</a>
    {{/if}}

  </form>
</header>

<div id="navbar" class="navbar">
  <div class="containernav">
    {{>nav}}
    <img src="./image/star.png" class="star" alt="star">
</div>
</div>
<div class="container">
<div class="boxs">
  {{#each savedfashion}}
<div class="box">
  <div class="innerbox">
    <a class="a" href="#"><img src="./image/{{gender}}/{{img}}" alt="fashion"></a>
  </div>
  <p class="info">{{price}} NIS <a><i id="{{id}}" class="fa fa-heart" onclick="savedpage({{id}})"></i></a></p>
  <div id="myModal" class="modal">
    <div class="modal-content">
      <span id="close" class="close">&times;</span>
      <p id="text"></p>
    </div>
  </div>
  <p>{{title}}</p>
</div>
  {{/each}}
</div>
</div>
</div>

<script src="js/functions.js"></script>
